{
  "compilerOptions": {
    "target": "esnext",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "dom",
      "ESNext"
    ],
    "module": "esnext",
    "jsx": "preserve",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "noFallthroughCasesInSwitch": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
